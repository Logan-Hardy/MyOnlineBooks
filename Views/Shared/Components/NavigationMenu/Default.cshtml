@{
}

@model IEnumerable<string>

    <!--This page is used to bring in the navigation menu for filtering displayed books by category-->
    <div class="m-3">
        <a class="btn btn-block btn-outline-secondary" asp-action="Index" asp-controller="Home" asp-route-category="">All</a>

        @foreach (string category in Model)
        {
            <a class="btn btn-block @(category == ViewBag.SelectedCategory ? "btn-info" : "btn-outline-secondary")"
               asp-action="Index" asp-controller="Home"
               asp-route-category="@category" asp-route-page="1">@category</a>
        }

    </div>